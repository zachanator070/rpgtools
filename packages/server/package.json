{
	"name": "@rpgtools/server",
	"version": "1.0.0",
	"description": "Tool set for playing an RPG game",
	"license": "MIT",
	"repository": "https://github.com/zachanator070/rpgtools",
	"main": "dist/server/src/index.js",
	"type": "module",
	"scripts": {
		"start": "node --experimental-specifier-resolution=node .",
		"prestart": "tsc",
		"dev:start": "node --experimental-specifier-resolution=node --inspect=0.0.0.0 --enable-source-maps .",
		"dev:start-brk": "node --experimental-specifier-resolution=node --inspect-brk=0.0.0.0 --enable-source-maps .",
		"build": "tsc",
		"dev": "nodemon --watch src -e ts,ejs --exec npm-run-all build dev:start",
		"dev-brk": "nodemon --watch src -e ts,ejs --exec npm-run-all build dev:start-brk",
		"test:integration": "jest --config jest.config.integration.cjs -i ${JEST_OPTIONS}",
		"test:unit": "jest --config jest.config.unit.cjs"
	},
	"dependencies": {
		"@graphql-tools/schema": "^8.1.0",
		"@rpgtools/common": "*",
		"@types/bson": "^4.2.0",
		"apollo-server": "^3.1.2",
		"apollo-server-express": "^3.10.2",
		"archiver": "^5.3.0",
		"ascii-table": "^0.0.9",
		"async-mutex": "^0.3.1",
		"bcrypt": "^5.0.1",
		"body-parser": "^1.19.0",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"esm": "^3.2.25",
		"express": "^4.17.1",
		"graphql-subscriptions": "^1.2.1",
		"graphql-tag": "^2.12.5",
		"graphql-upload": "^13.0.0",
		"graphql-ws": "^5.9.0",
		"gridfs-stream": "^1.1.1",
		"inversify": "^5.1.1",
		"jimp": "^0.16.1",
		"jsonwebtoken": "^8.5.1",
		"minimist": "^1.2.5",
		"mongoose": "^6.6.0",
		"morgan": "^1.10.0",
		"node-fetch": "^2.6.1",
		"nodemon": "^2.0.12",
		"npm-run-all": "^4.1.5",
		"redis": "^4.3.1",
		"redis-rstream": "^1.0.1",
		"redis-wstream": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"remark-parse": "^10.0.0",
		"typescript": "^4.3.5",
		"unified": "^10.1.0",
		"unist-util-visit": "^4.0.0",
		"unzipper": "^0.10.11",
		"uuid": "^8.3.2",
		"ws": "^8.8.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.15.0",
		"@babel/preset-typescript": "^7.15.0",
		"@types/archiver": "^5.1.1",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.13",
		"@types/graphql-upload": "^8.0.11",
		"@types/jest": "^29.2.0",
		"@types/jsonwebtoken": "^8.5.4",
		"@types/morgan": "^1.9.3",
		"@types/redis": "^4.0.11",
		"@types/type-is": "^1.6.3",
		"@types/unzipper": "^0.10.4",
		"@types/uuid": "^8.3.1",
		"@types/ws": "^8.5.3",
		"babel-jest": "^29.0.1",
		"eslint": "^8.23.0",
		"is-typedarray": "^1.0.0",
		"ts-jest": "^29.0.1",
		"typedarray-to-buffer": "^4.0.0"
	}
}
